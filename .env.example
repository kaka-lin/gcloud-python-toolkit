# Path to your Google Service Account credentials JSON (downloaded from GCP Console)
GOOGLE_APPLICATION_CREDENTIALS=your_service_account_credentials.json

# Google Drive folder ID to list and download files from
DRIVE_FOLDER_ID=your_drive_folder_id_here

# (Optional) Local directory for downloaded files
# If not set, defaults to "downloads"
DOWNLOAD_DIR=downloads

# Google Cloud project ID (used for Speech-to-Text API)
GOOGLE_CLOUD_PROJECT=your_project_id_here

# OpenAI API Key (used for GPT-4o translation)
OPENAI_API_KEY=your_openai_api_key_here
